{
  "manifest_version": 3,
  "name": "Web Vibes",
  "version": "1.0.0",
  "description": "A chrome extension that let's you vibe hack any website on the fly, then save your hacks for later use.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Web Vibes",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/constants/message-types.js",
        "content/handlers/shared-utils.js",
        "content/handlers/apply-hack-handler.js",
        "content/handlers/remove-hack-handler.js",
        "content/handlers/search-html-handler.js",
        "content/handlers/message-router.js",
        "content/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}